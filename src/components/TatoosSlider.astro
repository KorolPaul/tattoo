---
import TatoosSlide from "~components/TatoosSlide.astro";

export interface Props {
    title?: string;
}

const { title } = Astro.props;
---

<div class="tatoos">
    <h2>{title}</h2>
    <div class="tatoos_list">
        <div class="swiper-holder">
            <div class="swiper">
                <div class="swiper-wrapper">
                    <div class="swiper-slide">
                        <TatoosSlide
                            src="/img/tatoos/tatoo-1.png"
                            color="#D9D9D9"
                        />
                    </div>
                    <div class="swiper-slide">
                        <TatoosSlide
                            src="/img/tatoos/tatoo-2.png"
                            color="#FF008C"
                        />
                    </div>
                    <div class="swiper-slide">
                        <TatoosSlide
                            src="/img/tatoos/tatoo-3.png"
                            color="#080808"
                        />
                    </div>
                    <div class="swiper-slide">
                        <TatoosSlide
                            src="/img/tatoos/tatoo-4.png"
                            color="#001BAC"
                        />
                    </div>
                    <div class="swiper-slide">
                        <TatoosSlide
                            src="/img/tatoos/tatoo-5.png"
                            color="#D58F00"
                        />
                    </div>
                    <div class="swiper-slide">
                        <TatoosSlide
                            src="/img/tatoos/tatoo-6.png"
                            color="#BFE0FF"
                        />
                    </div>
                    <div class="swiper-slide">
                        <TatoosSlide
                            src="/img/tatoos/tatoo-7.png"
                            color="#618201"
                        />
                    </div>
                </div>

            </div>
            <div class="swiper-pagination"></div>

            <div class="swiper-button-prev"></div>
            <div class="swiper-button-next"></div>
        </div>
    </div>
</div>
<script>
    import Swiper from "swiper";
    import { Navigation, Pagination } from "swiper/modules";
    const swiper = new Swiper(".swiper", {
        loop: false,
        modules: [Navigation, Pagination],
        slidesPerView: 'auto',
        spaceBetween: 20,
        pagination: {
            el: ".swiper-pagination",
        },
        navigation: {
            nextEl: ".swiper-button-next",
            prevEl: ".swiper-button-prev",
        },
    });
</script>
