---
import Header from "~/components/Header.astro";
import Footer from "~/components/Footer.astro";

export interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <link rel="icon" href="/favicon.ico" sizes="any" />
        <link rel="icon" href="/icon.svg" type="image/svg+xml" />
        <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
        <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5">
        <title>{title}</title>
    </head>
    <body>
        <lottie-player class="noise" src="/img/json/noise/pink.json" background="transparent" speed="1" direction="1" mode="normal" autoplay loop preserveAspectRatio="none"></lottie-player>

        <slot />
        <script is:inline src="/js/fslightbox.js"></script>
        <script is:inline src="/js/main.js"></script>
        <script>
            import "@lottiefiles/lottie-player";
            import { create } from "@lottiefiles/lottie-interactivity";
            
            let lottiePlayers = document.querySelectorAll('lottie-player');

            lottiePlayers.forEach((item) => {
                item.addEventListener("ready", () => {
                    create({
                        player: item,
                        mode:"scroll",
                        actions: [
                            {
                                visibility: [0.50, 1.0],
                                type: "play"
                            }
                        ]
                    });
                });
            })
		</script>
    </body>
</html>
